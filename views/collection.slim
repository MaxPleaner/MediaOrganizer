a style='margin-right: 10px' href='/' root
a id="prev" style='margin-right: 10px' href="/collection/#{@collection.id}?idx=#{@idx == 0 ? @count - 1 : @idx - 1}&media_type=#{@media_type}" prev
a id="next" style='margin-right: 10px' href="/collection/#{@collection.id}?idx=#{@idx == @count - 1 ? 0 : @idx + 1}&media_type=#{@media_type}" next
a style='margin-right: 10px' href="/collection/#{@collection.id}?random=true&media_type=#{@media_type}" random

form style='display: inline' action='/collection/#{@collection.id}' method="GET"
  input type='hidden' name='idx' value=@idx
  select name='media_type'
    - ([""] + Item::MEDIA_TYPES).each do |media_type|
      option{
        value=media_type
        selected=(@media_type == media_type)
      } = media_type
  input type='submit' value='Filter'
    
pre = "Tag: #{@collection.name}\nitem #{@idx + 1} (total: #{@count})\n#{@item.path}"

- @from_collection = true
== slim :_item
